{
  "inputs": [
    {
      "id": "functions_mcp_extension_system_key",
      "description": "Azure Functions MCP Extension System Key",
      "type": "promptString",
      "password": true
    },
    {
      "id": "context7-mcp-api-key",
      "description": "Context7 MCP API Key",
      "type": "promptString",
      "password": true
    }
  ],
  "servers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${input:context7-mcp-api-key}"
      }
    },
    "microsoft.docs.mcp": {
      "type": "http",
      "url": "https://learn.microsoft.com/api/mcp"
    },
    "sequentialthinking": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    },
    "memory": {
      "type": "sse",
      "url": "https://central-memory.mcp.bezalu.com/runtime/webhooks/mcp/sse",
      "headers": {
        "x-functions-key": "${input:functions_mcp_extension_system_key}"
      }
    }
  }
}